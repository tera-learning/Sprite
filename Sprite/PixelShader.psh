///////////////////////////////////////////////////////
// 構造体宣言ブロック
///////////////////////////////////////////////////////
struct pixelInput
{
    float4 pos : SV_POSITION;
	float4 col : COLOR0;
    float2 tex : TEXCOORD0;
};

///////////////////////////////////////////////////////
// グローバル
///////////////////////////////////////////////////////
Texture2D gTexture : register(t0);
SamplerState gSampler : register(s0);

///////////////////////////////////////////////////////
// ピクセルシェーダプログラムブロック
///////////////////////////////////////////////////////
float4 ps_main(pixelInput inData) : SV_Target
{
    return gTexture.Sample(gSampler, inData.tex);
}